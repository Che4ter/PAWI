@model esencialAdmin.Models.CustomerViewModels.CustomerInputModel
@{
    ViewData["Title"] = "Kunde bearbeiten";
    ViewData["CustomerName"] = Model?.FirstName + " " + Model?.LastName;
}

@Html.Partial("_CustomerEditorForm")

<environment include="Development">
    @section scripts {
        <script src="~/lib/sweetalert2/sweetalert2.js" asp-append-version="true"></script>
        <script src="~/js/customer.js" asp-append-version="true"></script>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

    @section styles {
        <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.css" />
    }
</environment>

<environment include="Production,Preview">
    @section scripts {
        <script src="~/js/customer.min.js"></script>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

    @section styles {
        <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    }
</environment>