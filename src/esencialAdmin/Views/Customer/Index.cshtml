@{
    ViewData["Title"] = "Kunden Übersicht";
}

<div class="col-12 col-medium-12 col-small-12">
    <div class="grid">
        <div class="row row-space-between overview-header-row">
            <div class="col-6 col-medium-6 col-small-12">
                <h2>Kunden</h2>
            </div>
            <div class="col-6 col-medium-6 col-small-1 mui--text-right">
                <a asp-area="" asp-controller="Customer" asp-action="Create" class="mui-btn mui-btn--primary">Neuer Kunde erfassen</a>
            </div>
        </div>
    </div>
</div>
<div class="grid mui-form">
    <div class="row">
        <div class="col-12 col-medium-12 col-small-12">
            <div class="mui-panel">
                <table id="customerTable" class="mui-table mui-table--bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Vorname</th>
                            <th>Nachname</th>
                            <th>Strasse</th>
                            <th>PLZ</th>
                            <th>Ort</th>
                            <th>E-Mail</th>
                            @*<th>Edit</th>
                                <th>Delete</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<environment include="Development,Preview,Production">
    @section scripts {
        <script src="~/lib/sweetalert2/sweetalert2.js" asp-append-version="true"></script>
        <script src="~/lib/DataTables/datatables.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-contextMenu/dist/jquery.contextMenu.js" asp-append-version="true"></script>
        <script src="~/js/customerDatatable.js" asp-append-version="true"></script>
    }
    @section styles {
        <link rel="stylesheet" href="~/lib/jquery-contextMenu/dist/jquery.contextMenu.css" />
        <link rel="stylesheet" href="~/lib/DataTables/datatables.css" />
        <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.css" />
    }
</environment>