<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*<title>@ViewData["Title"] - esencialAdmin</title>*@

    <environment include="Development,Preview">
        <link rel="stylesheet" href="~/css/mui.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/responsive.css" />
        <link rel="stylesheet" href="~/css/the-flex-grid.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>
    @RenderSection("Styles", required: false)
</head>
<body class="loginTemplate">
    <header id="header">
        @await Html.PartialAsync("_NotificationsPartial")
    </header>

    <div class="mui-container-fluid">
        <main class="mui-panel mui--z">
            @RenderBody()
        </main>
    </div>
    <environment include="Development,Preview">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/mui.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>