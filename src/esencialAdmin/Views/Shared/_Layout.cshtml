@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="de-ch">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - esencialAdmin</title>

    <environment include="Development,Preview">
        <link rel="stylesheet" href="~/css/mui.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/responsive.css" />
        <link rel="stylesheet" href="~/css/the-flex-grid.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header id="header">
        <div class="mui-appbar mui--appbar-line-height">
            <div class="mui-container-fluid">
                <a class="sidedrawer-toggle mui--visible-xs-inline-block mui--visible-sm-inline-block js-show-sidedrawer">☰</a>
                <a class="sidedrawer-toggle mui--hidden-xs mui--hidden-sm js-hide-sidedrawer">☰</a>
                <span class="mui--text-title mui--visible-xs-inline-block mui--visible-sm-inline-block">Brand.io</span>
                <span class="appbar-title">@ViewData["Title"]</span>
                <environment include="Development">
                    <strong class="enviromentVersion">Development Version</strong>
                </environment>
                <environment include="Preview">
                    <strong class="enviromentVersion">Preview Version</strong>
                </environment>
                <environment include="Production">
                    <strong class="enviromentVersion">Production Version</strong>
                </environment>
            </div>
        </div>
        @await Html.PartialAsync("_NotificationsPartial")
    </header>
    <aside id="sidedrawer" class="mui--no-user-select">
        <div id="sidedrawer-brand" class="mui--appbar-line-height">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-item">
                <span class="mui--text-title">esencialAdmin</span>
            </a>
        </div>
        <div class="mui-divider"></div>
        <div id="sidedrawer-account">
            @await Html.PartialAsync("_LoginPartial")
        </div>
        <div class="mui-divider"></div>
        <ul>
            <li><strong><a asp-area="" asp-controller="Home" asp-action="Index">Übersicht</a></strong></li>
            <li>
                <strong><a asp-area="" asp-controller="Customer" asp-action="Index">Kunden verwaltung</a> <span class="mui-caret"></span></strong>

                <ul>
                    <li><a href="/customer/create">Kunde erfassen</a></li>
                </ul>
            </li>

        </ul>
        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdminRole")).Succeeded)
        {
            <div class="mui-divider"></div>

            <ul>
                <li><span class="nav-title">Administration</span></li>

                <li>
                    <strong><a asp-area="" asp-controller="employee" asp-action="Index">Mitarbeiter verwaltung</a> <span class="mui-caret"></span></strong>

                    <ul>
                        <li><a href="/employee/create">Mitarbeiter erfassen</a></li>
                    </ul>
                </li>
                <li>
                    <strong><a asp-area="" asp-controller="plan" asp-action="Index">Patenschafts Pläne verwaltung</a> <span class="mui-caret"></span></strong>

                    <ul>
                        <li><a href="/plan/create">Patenschafts Plan erfassen</a></li>
                    </ul>
                </li>
            </ul>
        }
    </aside>

    <main id="content-wrapper">
        <div class="mui--appbar-height"></div>
        <div class="mui-container-fluid content-container">
            @RenderBody()
        </div>
    </main>
    <footer id="footer">
        <div class="mui-container-fluid">
            <br>
            Made with ♥ by <a href="https://www.muicss.com">Philipp Leu</a>
        </div>
    </footer>

    <environment include="Development,Preview">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/mui.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
